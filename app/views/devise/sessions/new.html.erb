<h1 class="task_title">Log In</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="forms">
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.label :senha %>
      <%= f.password_field :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  </div>

<% end %>

<div class="links">
  <%= render "devise/shared/links" %>
</div>

