<div class="row clearfix">

  <% if subtask.completed? %>
    <div class="complete">
      <%= link_to complete_task_subtask_path(@task, subtask.id), method: :patch do %>
        <i style="opacity: 0.4;" class="fa fa-check"></i>
      <% end %>
    </div>
    <div class="subtask">
      <p style="opacity: 0.4;"><strike><%= subtask.title %></strike></p>
    </div>
    <div class="trash">
      <%= link_to task_subtask_path(@task, subtask.id), method: :delete, data: { confirm: "Deletar Subtarefa?" } do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>

  <% else %>

    <div class="complete">
      <%= link_to complete_task_subtask_path(@task, subtask.id), method: :patch do %>
        <i class="fa fa-check"></i>
      <% end %>
    </div>
    <div class="subtask">
      <p><%= subtask.title %></p>
    </div>
    <div class="trash">
      <%= link_to task_subtask_path(@task, subtask.id), method: :delete, data: { confirm: "Deletar Subtarefa?" } do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
  <% end %>

</div>