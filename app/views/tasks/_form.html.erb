<%= form_for(@task) do |f| %>

  <div class="field">
    <%= f.label :título %><br>
    <%= f.text_field :title, required: true %>
  </div>

  <div class="field">
    <%= f.label :descrição %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :privado? %>
    <%= f.check_box :isprivate %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Salvar" %>
  </div>
  
<% end %>